	<Page loaded="pageLoaded" backgroundColor="rgba(0,0,0,1)">
<StackLayout width="100%" height="100%">
			<StackLayout backgroundColor="#d9115A" width="55%" height="100%" horizontalAlignment="left" color="white">
				<!-- section 01 -->
				<StackLayout backgroundColor="#59023b" padding="10,20">
					<StackLayout height="60" width="60" backgroundColor="white" borderRadius="300" horizontalAlignment="left"></StackLayout>
					<label text="Username" class="font-weight-bold" fontSize="18" color="white" />
					<label text="Location" fontSize="12" color="white" />
				</StackLayout>
				<!-- section 02 -->
				<StackLayout backgroundColor="#8c0444" padding="10,0">
					<GridLayout columns="*,*,*" rows="auto">
						<StackLayout col="0">
							<label text="35" class="strong" fontSize="24" textAlignment="center" />
							<label text="Follows" fontSize="12" textAlignment="center" />
						</StackLayout>
						<StackLayout col="1">
							<label text="35" class="strong" fontSize="24" textAlignment="center" />
							<label text="Replies" fontSize="12" textAlignment="center" />
						</StackLayout>
						<StackLayout col="2">
							<label text="35" class="strong" fontSize="24" textAlignment="center" />
							<label text="Votes" fontSize="12" textAlignment="center" />
						</StackLayout>
					</GridLayout>
				</StackLayout>
				<!-- section 03 -->
				<FlexboxLayout flexDirection="column" padding="10,20" height="100%">
					<ScrollView flexGrow="1">
						<StackLayout class="nav" verticalAlignment="center">
							<label text="Home"  tap="{{navTo}}"/>
							<label text="Forum"  tap="{{navTo}}"/>
							<label text="Blog"  tap="{{navTo}}"/>
							<label text="Comic"  tap="{{navTo}}"/>
							<label text="Profile"  tap="{{navTo}}"/>
							<label text="Feedback"  tap="{{navTo}}"/>
							<label text="About Us" tap="{{navTo}}" />
							<label text="Log out"  tap="{{navTo}}"/>
						</StackLayout>
					</ScrollView>
					<StackLayout>
						<label text="Credits" class="font-weight-bold m-b-20" fontSize="12" />
						<label text="Wave version 1.0.1" class="font-weight-bold" fontSize="12" />
					</StackLayout>
				</FlexboxLayout>
			</StackLayout>
		</StackLayout>
	</Page>

		

