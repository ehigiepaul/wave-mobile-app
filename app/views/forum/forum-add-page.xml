<Page loaded="pageLoaded" class="page" actionBarHidden="true">
	<GridLayout rows="auto,*">
		<GridLayout rows="auto" columns="50 * auto auto" horizontalAlignment="left" color="white" height="56" width="100%" class="actionbar" row="0">
			<label text="arrow_back" fontSize="24" class="mat" textWrap="true" tap="{{goBack}}" col="0" />
			<Label text="Create Topic" fontSize="24" class="strong" col="1" />
			<!-- <Label text="search" fontSize="24" class="mat" textWrap="true" marginRight="16" col="2" tap="{{shareBtn}}" /> -->
			<Label text="SUBMIT" fontSize="16" style="font-weight:700" textWrap="true" col="3" tap="{{submit}}" />
		</GridLayout>
		<ScrollView row="1">
			<StackLayout padding="20">
				<label text="Topic Title" fontSize="12" color="black" />
				<TextField hint="Title goes here" color="black" borderColor="gray" borderWidth="2" />
				<label text="Topic Content" fontSize="12" marginTop="10" color="black" />
				<TextView hint="Topic content goes here" color="black" borderColor="gray" borderWidth="2" borderRadius="4" minHeight="300" />
			</StackLayout>
		</ScrollView>
	</GridLayout>
</Page>