<Page loaded="pageLoaded" class="page">
	<ActionBar title="tabview" class="action-bar">
	
		<StackLayout orientation="horizontal" horizontalAlignment="left" >
			<Label text="menu" fontSize="24" class="mat" textWrap="true" />
			<!-- <Label text="search" fontSize="24" class="mat" textWrap="true" horizontalAlignment="right" />
			<Label text="notifications" fontSize="24" class="mat" textWrap="true" /> -->
		</StackLayout>
		
	<ActionBar.actionItems>
		<ActionItem text="menu" icon="menu"/>
	</ActionBar.actionItems>
	
	</ActionBar>
	<GridLayout rows="*, auto" columns="*" loaded="onLoaded">
		<!-- <Frame row="0" defaultPage="page1/page1"/> -->
		<GridLayout row="1" columns="*,*,*,*,*" backgroundColor="#8c0444" padding="8,0" color="white">
			<StackLayout id="page1" class="bottom-nav-btn-active" col="0" tap="{{ navigate }}" horizontalAlignment="center">
				<Label text="home" class="mat" textWrap="true" textAlignment="center" />
				<Label text="Home" textWrap="true" class="bottom-nav-text" />
			</StackLayout>
			<StackLayout id="page2" class="bottom-nav-btn" tap="{{ navigate }}" col="1" horizontalAlignment="center">
				<Label text="record_voice_over" class="mat" textWrap="true" textAlignment="center" />
				<Label text="Forum" textWrap="true" class="bottom-nav-text" />
			</StackLayout>
			<StackLayout id="page3" class="bottom-nav-btn" tap="{{ navigate }}" col="2" horizontalAlignment="center">
				<Label text="library_books" class="mat" textWrap="true" textAlignment="center" />
				<Label text="Blog" textWrap="true" class="bottom-nav-text" />
			</StackLayout>
			<StackLayout id="page4" class="bottom-nav-btn" tap="{{ navigate }}" col="3" horizontalAlignment="center">
				<Label text="new_releases" class="mat" textWrap="true" textAlignment="center" />
				<Label text="Comics" textWrap="true" class="bottom-nav-text" />
			</StackLayout>
			<StackLayout id="page4" class="bottom-nav-btn" tap="{{ navigate }}" col="4" horizontalAlignment="center">
				<Label text="account_circle" class="mat" textWrap="true" textAlignment="center" />
				<Label text="Profile" textWrap="true" class="bottom-nav-text" />
			</StackLayout>
		</GridLayout>
	</GridLayout>
</Page>